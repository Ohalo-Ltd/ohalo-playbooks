# Copy to .env and fill in values. Do NOT commit secrets.

# Data X-Ray (DXR)
DXR_APP_URL=https://your-dxr.example.com
DXR_PAT_TOKEN=your_personal_access_token
# Optional DXR settings
# DXR_CLASSIFICATIONS_PATH=/api/vbeta/classifications
# DXR_FILES_PATH=/api/vbeta/files
# DXR_VERIFY_SSL=1
# DXR_TENANT=default

# Purview account endpoint (account-host URL, not purview.azure.net)
PURVIEW_ENDPOINT=https://<account>.purview.azure.com

# Entra ID (Azure AD) app registration credentials
AZURE_TENANT_ID=00000000-0000-0000-0000-000000000000
AZURE_CLIENT_ID=11111111-1111-1111-1111-111111111111
AZURE_CLIENT_SECRET=your-client-secret

# Domain/collections
PURVIEW_DOMAIN_NAME="Data X-Ray Integration"
# Optional: if you know your domain referenceName (6-char), set it explicitly
# PURVIEW_DOMAIN_ID=xxxxxx
# Optional: parent collection referenceName to host datasource child collections
# PURVIEW_PARENT_COLLECTION_ID=xxxxxx
# Optional: write labels to a specific collection (reduced-permissions mode)
# PURVIEW_COLLECTION_ID=xxxxxx
UNSTRUCTURED_DATASETS_COLLECTION_NAME="Unstructured Datasets"

# Runtime behavior
POLL_SECONDS=60
# RUN_ONCE=1
# SYNC_DELETE=0
# DISABLE_GOVERNANCE=0
# HTTP_TIMEOUT_SECONDS=30
# LOG_LEVEL=INFO
